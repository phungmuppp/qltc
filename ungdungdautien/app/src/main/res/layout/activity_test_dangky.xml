<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".testDangky">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/hinhnen" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Quản lí tài chính cá nhân"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:hint="Email"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:maxLength="100"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="match_parent"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:maxLength="100"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtrepassword"
        android:layout_width="match_parent"
        android:hint="RePassword"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:maxLength="100"
        android:textColor="@color/black"
        android:background="@drawable/bg_corner"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="Bằng cách bấm vào nút Đăng ký, bạn đã đồng ý với điều khoản dịch vụ và chính sách bảo mật của chúng tôi"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Đăng ký"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Bạn đã có tài khoản ? Đăng nhập ngay !!!" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Hoặc đăng nhập bằng"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        android:gravity="center">

        <ImageButton
            android:id="@+id/buttonDNFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook1"
            android:contentDescription="TODO"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/buttonDNGG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/google1"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/buttonDNAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/apple1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Dự án phát triển app của nhóm"
        android:textAlignment="center" />
</LinearLayout>